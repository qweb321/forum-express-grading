<div class="text-center"  style="background-color: rgb(238, 157, 8); ">
  <h2 class="m-2 p-3 text-white ">餐廳訂位</h2>
   <form action="/search" class="col-12 p-3">
    <div class="row g-3 w-75 mx-auto p-0">
      <div class="col-7 d-flex">
        <div class="w-50">
          <input type="date" class="form-control" id="date" name="date" value="{{date}}" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
       <div class="w-25">
        <select class="form-select mb-3" aria-label=".form-select-lg example" name="time">
            <option value="11:00" {{#ifCond time "11:00"}} selected {{/ifCond}}>11:00</option>
            <option value="12:00" {{#ifCond time "12:00"}} selected {{/ifCond}}>12:00</option>
            <option value="12:30" {{#ifCond time "12:30"}} selected {{/ifCond}}>12:30</option>
            <option value="13:00" {{#ifCond time "13:00"}} selected {{/ifCond}}>13:00</option>
          </select>
       </div>
        <div class="w-25">
          <select class="form-select mb-3" name="people" aria-label=".form-select-lg example">
            <option value="1" {{#ifCond people "1"}} selected {{/ifCond}}>1位</option>
            <option value="2" {{#ifCond people "2"}} selected {{/ifCond}}>2位</option>
            <option value="3" {{#ifCond people "3"}} selected {{/ifCond}}>3位</option>
            <option value="4" {{#ifCond people "4"}} selected {{/ifCond}}>4位</option>
            <option value="5" {{#ifCond people "5"}} selected {{/ifCond}}>5位</option>
            <option value="6" {{#ifCond people "6"}} selected {{/ifCond}}>6位</option>
          </select>
        </div>
      </div>
      <div class="col-3">
        <input class="form-control" type="text" name="restaurant" value="{{restaurant}}" placeholder="餐廳、分類" aria-label="default input example">
      </div>
      <div class="col-2">
        <button type="submit" class="btn btn-primary mb-3 w-100"><i
                class="fas fa-search"
              ></i>開始搜尋</button>
      </div>
    </div>
  </form>
</div>

<script>
  function getDate () {
    const date = new Date()
    const year = date.getFullYear()
    let month = date.getMonth() + 1
    let day = date.getDate()
    if (month < 10) {
      month = '0' + month
    }
    if (day < 10) {
      day = '0' + day
    }
    return year + '-' + month + '-' + day
  }

  const selectDate = document.getElementById('date')

  selectDate.min = getDate()
  selectDate.value = getDate()
</script>