<div class="row mx-auto">
    <div class="col-md-6 text-center">
        <img class="img-responsive center-block" src="{{userProfile.image}}" alt="avatar" style="border-radius: 50%; width: 350px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
    </div>
    <div class="col-md-6">
        <h2>{{userProfile.name}}</h2>
        <h3>{{userProfile.email}}</h3>
        {{#ifCond userProfile.id loginUser.id}}
        <a class="btn  btn-primary" href="/users/{{userProfile.id}}/edit">Edit</a>
        {{/ifCond}}
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card mt-3">
            <div class="card-header">
            {{#length userProfile.Followings}}{{/length}} following
            </div>
            <div class="card-body">
                {{#each userProfile.Followings}}
                    <img class="me-2" src="{{this.image}}" alt="image" style="width: 15%">
                {{/each}}
            </div>
        </div>
        <div class="card mt-3">
            <div class="card-header">
            {{#length userProfile.Followers}}{{/length}} follower
            </div>
            <div class="card-body">
                {{#each userProfile.Followers}}
                    <img class="me-2" src="{{this.image}}" alt="image" style="width: 15%">
                {{/each}}
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card mt-3">
            <div class="card-header">
            {{comments.count}}則已評論餐廳
            </div>
            <div class="card-body">
                {{#each comments.rows}}
                    <img class="me-2" src="{{this.Restaurant.image}}" alt="image" style="width: 15%">
                {{/each}}
            </div>
        </div>
         <div class="card mt-3">
            <div class="card-header">
            {{#length userProfile.FavoritedRestaurants}}{{/length}} 已收藏餐廳
            </div>
            <div class="card-body">
                {{#each userProfile.FavoritedRestaurants}}
                    <img class="me-2" src="{{this.image}}" alt="image" style="width: 15%">
                {{/each}}
            </div>
        </div>
    </div>
    
</div>


